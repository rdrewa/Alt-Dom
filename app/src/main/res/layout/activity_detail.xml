<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pl.radoslawdrewa.droid.altdom.DetailActivity"
    android:id="@+id/detail">

    <TextView
        android:text="MIESZKANIE NA SPRZEDAŻ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtObjectType"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tytuł ogłoszenia"
        android:id="@+id/txtTitle"
        android:layout_below="@+id/txtObjectType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="BEZPOSREDNIO"
        android:id="@+id/txtOwner"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powrót"
        android:id="@+id/btnBack"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtOwner"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgPhoto"
        android:layout_below="@+id/btnBack"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/hobbit_house"
        android:layout_alignRight="@+id/txtPricePerMeter"
        android:layout_alignEnd="@+id/txtPricePerMeter" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="510 00 zł"
        android:id="@+id/txtPrice"
        android:layout_below="@+id/imgPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="100 m2"
        android:id="@+id/txtArea"
        android:layout_below="@+id/imgPhoto"
        android:layout_alignRight="@+id/txtObjectType"
        android:layout_alignEnd="@+id/txtObjectType" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5 100 / m2"
        android:id="@+id/txtPricePerMeter"
        android:layout_below="@+id/imgPhoto"
        android:layout_alignRight="@+id/lstParams"
        android:layout_alignEnd="@+id/lstParams" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_below="@+id/txtPrice"
        android:inputType="textMultiLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:id="@+id/lstParams"
        android:layout_below="@+id/txtDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

</RelativeLayout>
</ScrollView>